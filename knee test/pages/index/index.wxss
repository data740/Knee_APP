/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.swiper-container{
  height: 180px;
  width: 100%;
  overflow: hidden;
}

swiper-item image {
  width: 100%;
  height: 100%; 
}

/* 按钮样式 */
.btn {
  width: 160rpx; /* 按钮的宽度 */
  height: 160rpx; /* 按钮的高度 */
  background-color: transparent; /* 背景透明 */
  border: none; /* 无边框 */
  border-radius: 50%; /* 圆形 */
  display: flex;
  flex-direction: column; /* 垂直排列 */
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中 */
  margin-top: 20rpx;
}

/* 图片样式 */
.btnImg {
  width: 80rpx; /* 图片宽度 */
  height: 80rpx; /* 图片高度 */
  border-radius: 50%; /* 图片圆形 */
  margin-bottom: 10rpx; /* 图片与文字之间的间距 */
}

/* 文字样式 */
.btn text {
  font-size: 28rpx; /* 文字大小 */
  font-weight: bold; /* 黑体 */
  color: black; /* 文字颜色 */
}

.container2 view{
  width: 100px;
  height: 100px;
  text-align: center;
  line-height: 100px;
}

.f2{
  padding-left: 5px;
}

